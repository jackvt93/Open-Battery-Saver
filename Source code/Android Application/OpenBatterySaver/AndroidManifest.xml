<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.cybersoft.obs.android"
    android:versionCode="11"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="vn.cybersoft.obs.android.application.OBS"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/OBS" >
        <provider
            android:name=".provider.DataProvider"
            android:authorities="vn.cybersoft.obs.android"
            android:exported="false" >
        </provider>

        <activity
            android:name="vn.cybersoft.obs.android.activities.MainActivity"
            android:label="@string/app_name" 
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <receiver 
            android:name=".receivers.TimeScheduleReceiver" >
            <intent-filter>
         	    <action android:name="vn.cybersoft.obs.android.intent.action.SCHEDULE_MODE" /> 
            </intent-filter>
        </receiver>
        
        <receiver 
            android:name=".receiver.ScheduleInitReceiver">
            <intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>

        <service android:name=".services.BatteryStatusService" />
        <service
            android:name=".services.TimeScheduleRunner" >
            <intent-filter>
                <action android:name="vn.cybersoft.obs.android.intent.action.SCHEDULE_MODE" />
            </intent-filter>
        </service>

        <activity
            android:name="vn.cybersoft.obs.android.activities.MessageBoxActivity"
            android:theme="@style/MessageBoxTheme" >
        </activity>
        <activity
            android:name="vn.cybersoft.obs.android.activities.SwitchModeConfirmActivity"
            android:theme="@style/MessageBoxTheme" >
        </activity>
        <activity android:name="vn.cybersoft.obs.android.activities.TimeScheduleActivity" >
            <intent-filter>
                <action android:name="vn.cybersoft.obs.android.activities.ScheduleModeTimeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SetTimeScheduleActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|navigation" >
        </activity>
    </application>

</manifest>